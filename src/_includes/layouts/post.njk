{% extends 'src/_includes/layouts/full_width.njk' %}

{% from "src/_includes/macros/page_links.njk" import renderPageLinks %}

{% block main %}
<article>
  <div class="flex flex-col">
    <h1>{{ title }}</h1>
    {% if lastUpdated %}
      <div>
        <span class="font-medium">Updated: {{ lastUpdated | parseDate | formatDateFull }}</span>
        <span>| Published: {{ publicationDate | parseDate | formatDateFull }}</span>
      </div>
    {% else %}
      <span class="font-medium">Published: {{ publicationDate | parseDate | formatDateFull }}</span>
    {% endif %}
  </div>
  {{ content | safe }}
</article>
{% endblock %}

{% block pagination %}
{{ renderPageLinks(collections.posts, page, "Newer", "Older") }}
{% endblock %}
