---
title: Blog
eleventyExcludeFromCollections: true
layout: 'layouts/full_width.njk'
---

<h1>Blog</h1>

{% set currYear = "" %}
{% for post in collections.posts %}
  {% set pubYear = post.data.publicationDate.substring(0, 4) %}
  {% if pubYear != currYear %}
    <h2>{{ pubYear }}</h2>
    {% set currYear = pubYear %}
  {% endif %}
  <div class="flex flex-col">
    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <small>Published: {{ post.data.publicationDate | parseDate | formatDateFull }}</small>
    {% if post.data.page.excerpt %}
      {{ post.data.page.excerpt | md | safe }}
    {% endif %}
  </div>
{% endfor %}
